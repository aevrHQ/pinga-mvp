{
  "name": "devflow-agent",
  "version": "0.2.0",
  "description": "Self-hosted AI DevOps agent for DevFlow platform",
  "type": "module",
  "bin": {
    "devflow-agent": "./bin/devflow-agent.js"
  },
  "main": "./dist/index.js",
  "exports": {
    ".": "./dist/index.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/devflow/devflow-agent.git"
  },
  "bugs": {
    "url": "https://github.com/devflow/devflow-agent/issues"
  },
  "homepage": "https://github.com/devflow/devflow-agent#readme",
  "scripts": {
    "build": "tsc && node fix-imports.js",
    "dev": "tsx src/index.ts",
    "start": "node dist/index.js",
    "cli": "tsx src/cli.ts",
    "clean": "rm -rf dist",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "devflow",
    "copilot",
    "ai",
    "devops",
    "automation",
    "github",
    "slack",
    "telegram",
    "github-copilot",
    "cli-agent"
  ],
  "author": "DevFlow Contributors",
  "license": "MIT",
  "dependencies": {
    "@github/copilot-sdk": "^0.1.16",
    "axios": "^1.6.0",
    "dotenv": "^16.3.1",
    "open": "^9.1.0",
    "simple-git": "^3.22.0",
    "yargs": "^17.7.2"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/yargs": "^17.0.35",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
