# DevFlow CLI Agent - Environment Variables
# Copy this file to .env.local and update with your values

# Platform Configuration
PLATFORM_URL=https://devflow-web.vercel.app
PLATFORM_API_KEY=your-platform-jwt-token

# OAuth & Authentication
OAUTH_REDIRECT_URI=http://localhost:3333/callback
GITHUB_CLIENT_ID=gh_client_id
GITHUB_CLIENT_SECRET=your-github-client-secret

# Agent Configuration
AGENT_ID=your-agent-uuid
AGENT_NAME=my-devflow-agent

# Polling & Timing
POLL_INTERVAL_MS=5000
HEARTBEAT_INTERVAL_MS=30000

# Logging
LOG_LEVEL=info

# Optional: Custom Copilot Server
# COPILOT_CLI_URL=localhost:4321
